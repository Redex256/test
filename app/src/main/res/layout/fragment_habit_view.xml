                app:layout_constraintTop_toBottomOf="@id/habitNameText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/habitIcon"/>

            <!-- ÐŸÑ€Ñ–Ð¾Ñ€Ð¸Ñ‚ÐµÑ‚ -->
            <TextView
