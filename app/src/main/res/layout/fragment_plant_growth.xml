<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основна картка з рослиною -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/plantCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Зображення рослини -->
            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/plant_stage_0"/>

            <!-- Ріст у відсотках -->
            <TextView
                android:id="@+id/growthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ріст: 0%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ⭐ Лічильник поливу -->
    <TextView
        android:id="@+id/waterLeftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Можна полити: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toBottomOf="@id/plantCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- ⭐ Кнопка поливу -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/waterPlantButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Полити рослину"
        android:textSize="18sp"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/waterLeftText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
